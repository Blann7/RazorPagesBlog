@page "{id}"
@model BlogPhone.Pages.admin.ChangeUserModel
@{
    ViewData["Title"] = "Изменить пользователя";
}

<h1>Изменение личного кабинета пользователя</h1>
<hr />

<form method="post" asp-antiforgery="true">
    <label>ID</label>
    <input disabled type="number" style="margin:5px" value="@Model.ChangeUser!.Id" />
    <br />

    <label>Name</label>
    <input type="text" style="margin:5px" required name="name" value="@Model.ChangeUser!.Name" />
    <br />

    <label>Password</label>
    <input type="text" style="margin:5px" required name="password" value="@Model.ChangeUser!.Password" />
    <br />

    <label>Email</label>
    <input type="email" style="margin:5px" required name="email" value="@Model.ChangeUser!.Email" />
    <br />

    <label>Money</label>
    <input type="number" style="margin:5px" required name="money" value="@Model.ChangeUser!.Money" />
    <br />

    <label>Add Role Days</label>
    <input type="number" style="margin:5px" required name="roleAddDays" value="0" />
    <br />

    <label>Role</label>
    <select style="margin:5px" name="role" required>
        @if (@Model.ChangeUser!.Role == "user") 
        { 
            <option selected value="user">user</option> 
        }
        else 
        { 
            <option value="user">user</option> 
        }
        @if (@Model.ChangeUser!.Role == "standart") 
        { 
            <option selected value="standart">standart</option> 
        }
        else 
        { 
            <option value="standart">standart</option> 
        }
        @if (@Model.ChangeUser!.Role == "moder") 
        { 
            <option selected value="moder">moder</option> 
        }
        else 
        { 
            <option value="moder">moder</option> 
        }
        @if (@Model.ChangeUser!.Role == "admin") 
        { 
            <option selected value="admin">admin</option> 
        }
        else 
        { 
            <option value="admin">admin</option> 
        }
    </select>
    <br />

   @if(!@AccessChecker.BanCheck(@Model.ChangeUser!.BanMs))
    {
        <p>
            <a asp-page="userChange" asp-page-handler="Unban" style="color:indianred">Разблокировать аккаунт</a>
        </p>
    }

    <button type="submit">Сохранить</button>
</form>