@page
@model BlogPhone.Pages.AddArticleModel
@{
    ViewData["Title"] = "Добавить статью";
}

<h1>Создание новой статьи</h1>

<form method="post" asp-antiforgery="true" enctype="multipart/form-data">

    <h3>Название статьи</h3>
    <textarea asp-for="Label" name="label" type="text" required cols=100 rows=2></textarea>
    <br>

    <h3>Текст статьи</h3>
    <textarea asp-for="ArticleText" name="articleText" type="text" required cols=100 rows=20></textarea>

    <br>

    <h3>Фото к статье</h3>
    <input asp-for="Image" type="file" name="image" />

    <br> <br>

    <input type="submit" value="Создать" />
</form>
